{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://inference-atlas.local/schemas/quality_metrics.schema.json",
  "title": "InferenceAtlas Quality Metrics",
  "type": "object",
  "required": ["schema_version", "generated_at_utc", "rows"],
  "properties": {
    "schema_version": { "type": "string" },
    "generated_at_utc": { "type": "string" },
    "rows": {
      "type": "array",
      "items": {
        "type": "object",
        "required": [
          "model_id",
          "aliases",
          "workload_types",
          "quality_raw",
          "scale_min",
          "scale_max",
          "quality_source",
          "source_url",
          "confidence",
          "last_verified_at"
        ],
        "properties": {
          "model_id": { "type": "string", "minLength": 1 },
          "aliases": { "type": "array", "items": { "type": "string" } },
          "workload_types": { "type": "array", "items": { "type": "string" } },
          "provider": { "type": ["string", "null"] },
          "quality_raw": { "type": "number" },
          "scale_min": { "type": "number" },
          "scale_max": { "type": "number" },
          "quality_source": { "type": "string", "minLength": 1 },
          "source_url": { "type": "string", "minLength": 1 },
          "confidence": {
            "type": "string",
            "enum": ["official", "high", "medium", "low", "estimated"]
          },
          "last_verified_at": {
            "type": "string",
            "pattern": "^\\d{4}-\\d{2}-\\d{2}$"
          }
        },
        "additionalProperties": false
      }
    }
  },
  "additionalProperties": false
}
